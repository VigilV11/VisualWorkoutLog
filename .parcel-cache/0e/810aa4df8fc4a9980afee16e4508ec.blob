:root {
  --color-dark--1: #333;
  --color-light--1: #ccc;
  --color-light--2: #eee;
  --color-brand--1: rgb(231, 188, 47);
  --color-brand--2: rgb(164, 231, 167);
}

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  background-color: var(--color-light--1);
  display: flex;
}

/* COMMON */
input,
select {
  width: 80px;
  height: 22px;
  border: 1px solid #ccc;
  border-radius: 3px;
  /* margin-right: 15px; */
}
input {
  padding: 3px;
}

label {
  /* width: 120px; */
  /* padding-right: 30px; */
  color: #fff;
  font-size: 0.9rem;
}

.hidden {
  display: none;
}

.submit-button {
  /* display: none; */
  width: 60px;
  height: 24px;
  display: block;
  margin: auto;
  margin-top: 7px;
  border: 1px solid #333;
  border-radius: 3px;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #eee;
}

/* WORKOUT LIST */
#workout-list {
  width: 400px;
  height: 600px;
  background-color: #333;
}

#workout-list h2 {
  color: #eee;
  margin: 5%;
  text-align: center;
}

.workout-form-outbox {
  line-height: 2rem;
  margin: 0 auto;
  padding: 3%;
  /* display: block; */
  width: 380px;
  background-color: #555;
  border-radius: 5px;
  box-shadow: 0 0 4px 4px rgba(0, 0, 0, 0.2);
}
.workout-form-inbox {
  display: block;
  margin: 0 auto;
  width: 320px;
  /* justify-content: center; */
}
/* MAP */
#map {
  width: 800px;
  height: 600px;
}

/* POPUP PIN */

/* Popup width is defined in JS using options */
.leaflet-popup .leaflet-popup-content-wrapper {
  background-color: var(--color-dark--1);
  color: var(--color-light--2);
  border-radius: 5px;
  padding-right: 0.6rem;
}

.leaflet-popup .leaflet-popup-content {
  font-size: 0.8rem;
}

.leaflet-popup .leaflet-popup-tip {
  background-color: var(--color-dark--1);
}

.running-popup .leaflet-popup-content-wrapper {
  border-left: 5px solid var(--color-brand--2);
}

.cycling-popup .leaflet-popup-content-wrapper {
  border-left: 5px solid var(--color-brand--1);
}

